#!/usr/bin/env python3
"""
what time is it in all the places?
"""

from datetime import datetime as dt
import pytz

if __name__ == "__main__":
    now = dt.utcnow()
    utc_now = pytz.timezone('UTC').localize(now)
    fmt = '%A, %H:%M'

    def fmt_time(tz):
        return utc_now.astimezone(pytz.timezone(tz)).strftime(fmt)

    us  = '🇺🇸'
    utc = '🌐'
    au  = '🇦🇺'
    here = '  <-- you are here'

    print("{} : {}{}".format(us,  fmt_time('America/New_York'), here))
    print("{}: {}".format(utc, fmt_time('UTC')))
    print("{} : {}".format(au,  fmt_time('Australia/Melbourne')))

