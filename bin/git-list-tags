#!/usr/bin/env python
import subprocess

def main():
    cmd = [
        'git',
        'for-each-ref',
        '--sort', 'taggerdate',
        '--sort', 'version:refname',
        '--format', '%(objecttype) %(taggerdate:format:%Y-%m-%d) %(refname:short)',
        'refs/tags',
    ]

    git = subprocess.run(cmd, capture_output=True, check=True, encoding="utf-8")

    is_tag = lambda line: line.startswith("tag")

    for line in filter(is_tag, git.stdout.splitlines()):
        print(line.removeprefix("tag "))

if __name__ == "__main__":
    main()
