<?xml version="1.0"?>
<root>
    <item>
        <name>Map help to function</name>
        <identifier>private.map_help_to_function</identifier>
        <autogen>__KeyToKey__ KeyCode::HELP, KeyCode::FN</autogen>
    </item>
    <item>
        <name>Remap Application to Hyper</name>
        <appendix>OS X doesn't use the application key, so this remaps it to ctrl + shift + option + command</appendix>
        <identifier>private.application_to_hyper</identifier>
        <autogen>
            --KeyToKey--
            KeyCode::PC_APPLICATION,

            KeyCode::COMMAND_L,
            ModifierFlag::OPTION_L | ModifierFlag::SHIFT_R | ModifierFlag::CONTROL_L
        </autogen>
    </item>
    <item>
        <name>Remap Left Control to Hyper</name>
        <appendix>OS X doesn't use the application key, so this remaps it to ctrl + shift + option + command</appendix>
        <identifier>private.ctrl_l_to_hyper</identifier>
        <autogen>
            --KeyToKey--
            KeyCode::F19,

            KeyCode::COMMAND_L,
            ModifierFlag::OPTION_L | ModifierFlag::SHIFT_R | ModifierFlag::CONTROL_L
        </autogen>
    </item>
    <item>
        <name>F15 to eject</name>
        <identifier>private.f15_to_eject</identifier>
        <autogen>__KeyToConsumer__ KeyCode::F15, ModifierFlag::FN, ConsumerKeyCode::EJECT</autogen>
    </item>

    <!-- settings for Poker II -->
    <item>
        <name>Poker II settings for sane arrow keys</name>

        <item>
            <name>Remap Left Control to Hyper</name>
            <appendix>Left control mapped to F19, so this remaps F19 to virtual modifier.</autogen>
            <identifier>poker2.left_control_to_hyper</identifier>
            <autogen>
                --KeyToKey--
                KeyCode::F19,
                KeyCode::VK_MODIFIER_EXTRA1
            </autogen>
        </item>
        <item>
            <name>Remap Hyper-H to Left</name>
            <identifier>poker2.hyper_h_to_left</identifier>
            <autogen>
                --KeyToKey--
                KeyCode::H, ModifierFlag::EXTRA1,
                KeyCode::CURSOR_LEFT
            </autogen>
        </item>
        <item>
            <name>Remap Hyper-J to Left</name>
            <identifier>poker2.hyper_j_to_left</identifier>
            <autogen>
                --KeyToKey--
                KeyCode::J, ModifierFlag::EXTRA1,
                KeyCode::CURSOR_DOWN
            </autogen>
        </item>
        <item>
            <name>Remap Hyper-K to Left</name>
            <identifier>poker2.hyper_k_to_left</identifier>
            <autogen>
                --KeyToKey--
                KeyCode::K, ModifierFlag::EXTRA1,
                KeyCode::CURSOR_UP
            </autogen>
        </item>
        <item>
            <name>Remap Hyper-L to Left</name>
            <identifier>poker2.hyper_l_to_left</identifier>
            <autogen>
                --KeyToKey--
                KeyCode::L, ModifierFlag::EXTRA1,
                KeyCode::CURSOR_RIGHT
            </autogen>
        </item>

        <item>
            <name>Remap Escape to backtick/tilde</name>
            <appendix>L-Ctrl=Esc, so remap esc. to tilde</appendix>
            <identifier>poker2.esc_to_backtick</identifier>
            <autogen>
                --KeyToKey--
                KeyCode::ESCAPE,
                KeyCode::BACKQUOTE
            </autogen>
        </item>
    </item>




