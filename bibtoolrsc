# remove bibdesk fields
delete.field = {Bdsk-File-1}
delete.field = {Bdsk-Url-1}
delete.field = {Date-Modified}
delete.field = {Date-Added}

# pretty-print settings
print.use.tab = off
print.align = 16
print.align.key = off
print.align.string = off
print.wide.equal = on

# fields order, just like biborder
sort = on
sort.order = {
    * = author # editor # key # booktitle # title # shorttitle # sorttitle #
        crossref # chapter # journal # volume # type # number # howpublished #
        institution # organization # address # publisher # school # edition #
        pages # day # month # year # note
}

# lowercase types
new.entry.type = "string"
new.entry.type = "article"
new.entry.type = "book"
new.entry.type = "booklet"
new.entry.type = "conference"
new.entry.type = "inbook"
new.entry.type = "incollection"
new.entry.type = "inproceedings"
new.entry.type = "manual"
new.entry.type = "mastersthesis"
new.entry.type = "misc"
new.entry.type = "phdthesis"
new.entry.type = "proceedings"
new.entry.type = "review"
new.entry.type = "techreport"
new.entry.type = "unpublished"

# vim:syntax=cfg
