# vim:ft=gitconfig

[user]
    name = Michael McClimon
    email = michael@mcclimon.org

[core]
    excludesfile = ~/.gitignore
    abbrev = 8

# includes
[include]
    path = ~/.gitlab.conf

[includeIf "gitdir:~/code/fm/"]
    path = ~/.work.gitconfig

# everything else, alphabetically
[advice]
    addEmptyPathspec = false
    detachedHead = false
    pushUpdateRejected = false
    skippedCherryPicks = false
    statusHints = false

[alias]
    b = branch --verbose
    co = checkout --recurse-submodules
    fall = fetch --all --prune
    ff = merge --ff-only
    hist = log --graph --oneline --decorate --all
    lg = log --pretty=line
    mr = !sh -c 'git fetch $1 merge-requests/$2/head:mr-$1-$2 && git checkout mr-$1-$2' -
    pick = cherry-pick
    recon = rebase --continue
    refshow = !git --no-pager show -s --pretty=ref
    rewhy = rebase --show-current-patch
    shove = push --force-with-lease
    showfiles = show --pretty='format:' --name-only
    upll = pull
    weld = merge --no-ff
    wonk = "!sh -c 'whoami'"

[blame]
    coloring = repeatedLines

[clone]
    defaultRemoteName = gitbox

[color "blame"]
    repeatedLines = 242

[color "branch"]
    remote = white

[color "interactive"]
    help = brightmagenta

[commit]
    verbose = true

[fetch]
    prune = true
    output = compact

[format]
    pretty = fuller

[init]
    defaultBranch = main

[log]
    mailmap = true
    date = iso-local

[pretty]
    line = %C(auto)%h %<(9,trunc)%aL %cs  %s %d

[push]
    default = current

[rebase]
    autosquash = true

[rerere]
    enabled = true

[stash]
    showStat = true

[submodule]
    recurse = true

[url "ssh://git@github.com/"]
    insteadOf = https://github.com/
    insteadOf = git://github.com/
