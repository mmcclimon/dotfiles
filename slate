# slate config

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# hyper
alias hyper ctrl;alt;cmd;shift

#screens
alias main 0
alias ext 1

# application bindings
alias editor 'MacVim'
bind e:${hyper} focus ${editor}

alias browser 'Firefox'
bind w:${hyper} focus ${browser}

alias terminal 'iTerm'
bind t:${hyper} focus ${terminal}

bind f:${hyper} focus 'Finder'

# layouts
alias lefttwothirds move screenOriginX;screenOriginY 2*screenSizeX/3;screenSizeY
alias main-rightthird move screenOriginX+2*screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY ${main}
alias main-rightthird-tophalf move screenOriginX+2*screenSizeX/3;screenOriginY screenSizeX/3;screenSizeY/2 ${main}

layout webdev ${editor}:MAIN_FIRST ${lefttwothirds} ${main}
layout webdev ${terminal}:MAIN_FIRST ${main-rightthird-tophalf}
layout webdev ${browser}:REPEAT ${lefttwothirds} ${ext}

layout browsing ${browser}:REPEAT ${lefttwothirds} ${main}
layout browsing ${editor}:MAIN_FIRST ${main-rightthird}
layout browsing ${terminal}:MAIN_FIRST move screenOriginX+60;screenOriginY+60 screenSizeX/2.5;screenSizeY/2-15 ${ext}

# layout bindings
bind pad1:${hyper} layout browsing
bind pad2:${hyper} layout webdev

# left/right half
bind right:${hyper} push right bar-resize:screenSizeX/2
bind left:${hyper} push left bar-resize:screenSizeX/2

# throw
bind ]:${hyper} throw right
bind [:${hyper} throw left

# window hints
bind esc:cmd hint
